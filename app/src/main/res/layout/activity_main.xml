<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:layout_weight="1"
        android:background="#0D2E7D32"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:layout_marginBottom="1pt"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/buAC"
                android:onClick="AcEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#630352DA"
                android:text="AC"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="94dp"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="+/-"
                android:textAlignment="center"
                android:textStyle="bold">


            </Button>

            <Button
                android:id="@+id/buDivide"
                android:layout_width="30pt"
                android:onClick="operatorEvent"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="/"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4527A0"
                android:text="*"
                android:textAlignment="center">


            </Button>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:onClick="numberEvent"
                android:text="1"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="2"
                android:textAlignment="center"
                android:textStyle="bold">


            </Button>

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:background="#4EDA03"
                android:text="3"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"

                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="-"
                android:textAlignment="center">


            </Button>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="4"
                android:onClick="numberEvent"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:background="#4EDA03"
                android:text="5"
                android:textAlignment="center"
                android:textStyle="bold">


            </Button>

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:background="#4EDA03"
                android:text="6"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="+"
                android:textAlignment="center">


            </Button>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:background="#4EDA03"
                android:text="7"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="8"
                android:onClick="numberEvent"
                android:textAlignment="center"
                android:textStyle="bold">


            </Button>

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="9"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:onClick="PercentEvent"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="%"
                android:textAlignment="center">


            </Button>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu0"
                android:layout_width="46pt"
                android:onClick="numberEvent"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="2"
                android:background="#4EDA03"
                android:text="0"
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:background="#4EDA03"
                android:text="."
                android:textAlignment="center">


            </Button>

            <Button
                android:id="@+id/buEquals"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="EqualEvent"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#CB2E2B93"
                android:text="="
                android:textAlignment="center">


            </Button>


        </TableRow>

    </TableLayout>

</LinearLayout>